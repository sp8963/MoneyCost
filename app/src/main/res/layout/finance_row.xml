<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:visibility="gone"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="12" />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_id"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/item_id"
        android:text="資訊"
        android:textColor="#000000"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/item_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_name"
        android:layout_toStartOf="@+id/item_datetime"
        android:text="金額"
        android:textColor="#000000"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/item_datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_money"
        android:layout_alignParentEnd="true"
        android:text="yyyy/mm/dd"
        android:textSize="18sp" />
</RelativeLayout>